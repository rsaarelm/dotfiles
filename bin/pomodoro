#!/bin/bash

# Pomodoro work timer, pop up a break reminder every half hour on the clock.
while [ true ]; do sleep $((30-(`date +%-M`%30)))m; xmessage -timeout 1 break; done

#while [ true ]; do echo work now; sleep 25m; xmessage -timeout 1 break; echo on break; sleep 5m; xmessage -timeout 1 resume; done
