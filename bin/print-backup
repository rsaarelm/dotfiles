#!/bin/bash

# usage print-backup [small_binary_data] [output.pdf]
# Creates a PDF with base64 output of the binary data both as text and as a
# sequence of QR codes. Currently assumes the data comes in ~1k size.

# Dependencies:
# qrencode
# LaTeX with geometry, graphicx and fancyvrb packages
# Rubber

TDIR=$(mktemp -d)

split $1 -n 4 $TDIR/PART
base64 -w 38 < $1 > $TDIR/data.txt
cd $TDIR

for i in PART*; do
base64 $i | qrencode -o $i.png
done

cat > hardcopy.tex <<EOF
\documentclass[twocolumn]{article}
\usepackage{geometry}
\usepackage{graphicx}
\usepackage{fancyvrb}
\begin{document}

\noindent\minipage{0.5\linewidth}
\includegraphics[width=\linewidth]{PARTaa.png}
\endminipage\hfill
\noindent\minipage{0.5\linewidth}
\includegraphics[width=\linewidth]{PARTab.png}
\endminipage

\noindent\minipage{0.5\linewidth}
\includegraphics[width=\linewidth]{PARTac.png}
\endminipage\hfill
\noindent\minipage{0.5\linewidth}
\includegraphics[width=\linewidth]{PARTad.png}
\endminipage

\VerbatimInput{data.txt}
\end{document}
EOF

rubber -d hardcopy.tex

cd -
cp $TDIR/hardcopy.pdf $2
rm -rf $TDIR
